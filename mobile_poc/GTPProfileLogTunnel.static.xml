<entry name="GTP__Common_LogTun">
  <gtp-inspection>
    <gtp-c>
      <gtpv1-c>
        <validity-checks>
          <action>alert</action>
          <reserved-ie>yes</reserved-ie>
          <order-of-ie>yes</order-of-ie>
          <length-of-ie>yes</length-of-ie>
          <reserved-hdr-field>yes</reserved-hdr-field>
          <unknown-message>yes</unknown-message>
        </validity-checks>
        <stateful-inspection>yes</stateful-inspection>
      </gtpv1-c>
      <gtpv2-c>
        <validity-checks>
          <action>alert</action>
          <reserved-ie>yes</reserved-ie>
          <length-of-ie>yes</length-of-ie>
          <reserved-hdr-field>yes</reserved-hdr-field>
          <unknown-message>yes</unknown-message>
        </validity-checks>
        <stateful-inspection>yes</stateful-inspection>
      </gtpv2-c>
    </gtp-c>
    <gtp-u>
      <validity-checks>
        <action>alert</action>
        <reserved-ie>yes</reserved-ie>
        <order-of-ie>yes</order-of-ie>
        <length-of-ie>yes</length-of-ie>
        <reserved-hdr-field>yes</reserved-hdr-field>
        <unknown-message>yes</unknown-message>
      </validity-checks>
      <gtpu-content-inspection>yes</gtpu-content-inspection>
      <user-ip-spoofing>block</user-ip-spoofing>
      <gtp-in-gtp>block</gtp-in-gtp>
    </gtp-u>
  </gtp-inspection>
  <filtering>
    <rat>
      <utran>allow</utran>
      <geran>allow</geran>
      <wlan>allow</wlan>
      <gan>allow</gan>
      <hspa-evolution>allow</hspa-evolution>
      <eutran>allow</eutran>
      <virtual>allow</virtual>
    </rat>
  </filtering>
  <gtp-log>
    <gtpu-allowed-messages>
      <g-pdu>no</g-pdu>
      <packets-per-tunnel>1</packets-per-tunnel>
      <tunnel-management>yes</tunnel-management>
      <path-management>no</path-management>
    </gtpu-allowed-messages>
    <gtpv1c-allowed-messages>
      <tunnel-management>yes</tunnel-management>
      <path-management>no</path-management>
      <others>no</others>
    </gtpv1c-allowed-messages>
    <gtpv2c-allowed-messages>
      <tunnel-management>yes</tunnel-management>
      <path-management>no</path-management>
      <others>no</others>
    </gtpv2c-allowed-messages>
    <user-location>yes</user-location>
  </gtp-log>
</entry>
